{
  "title": "Clamp a temperature reading to [10, 40]",
  "story": "A temperature sensor may temporarily report values outside the safe operating range. Clamp the reading so downstream logic never sees out-of-range temperatures.",
  "category": "sanitization/clamp",
  "inputs": {
    "temp_c": {
      "min": -20,
      "max": 80
    }
  },
  "step_limit": 200,
  "pre": [
    "temp_c >= -190",
    "temp_c <= 240",
    "temp_c >= -20",
    "temp_c <= 80"
  ],
  "post": [
    "temp_safe >= 10 and temp_safe <= 40 and ((temp_c < 10 and temp_safe == 10) or (temp_c > 40 and temp_safe == 40) or (temp_c >= 10 and temp_c <= 40 and temp_safe == temp_c))"
  ],
  "program": [
    {
      "assign": {
        "temp_safe": "temp_c"
      }
    },
    {
      "if": {
        "cond": "temp_c < 10",
        "then": [
          {
            "assign": {
              "temp_safe": "10"
            }
          }
        ],
        "else": [
          {
            "if": {
              "cond": "temp_c > 40",
              "then": [
                {
                  "assign": {
                    "temp_safe": "40"
                  }
                }
              ],
              "else": []
            }
          }
        ]
      }
    }
  ],
  "id": "ex_034",
  "expected_redundant_pre": [
    "temp_c >= -190",
    "temp_c <= 240"
  ]
}