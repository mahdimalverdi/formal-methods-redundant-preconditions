{
  "title": "Clamp a temperature reading to [-40, 85]",
  "story": "A temperature sensor may temporarily report values outside the safe operating range. Clamp the reading so downstream logic never sees out-of-range temperatures.",
  "category": "sanitization/clamp",
  "inputs": {
    "temp_c": {
      "min": -70,
      "max": 125
    }
  },
  "step_limit": 200,
  "pre": [
    "temp_c >= -240",
    "temp_c <= 285",
    "temp_c >= -70",
    "temp_c <= 125"
  ],
  "post": [
    "temp_safe >= -40 and temp_safe <= 85 and ((temp_c < -40 and temp_safe == -40) or (temp_c > 85 and temp_safe == 85) or (temp_c >= -40 and temp_c <= 85 and temp_safe == temp_c))"
  ],
  "program": [
    {
      "assign": {
        "temp_safe": "temp_c"
      }
    },
    {
      "if": {
        "cond": "temp_c < -40",
        "then": [
          {
            "assign": {
              "temp_safe": "-40"
            }
          }
        ],
        "else": [
          {
            "if": {
              "cond": "temp_c > 85",
              "then": [
                {
                  "assign": {
                    "temp_safe": "85"
                  }
                }
              ],
              "else": []
            }
          }
        ]
      }
    }
  ],
  "id": "ex_062",
  "expected_redundant_pre": [
    "temp_c >= -240",
    "temp_c <= 285"
  ]
}