{
  "title": "Capped increment (do not exceed 3)",
  "story": "Increment a counter only if it is below a fixed limit (e.g., max retry attempts).",
  "category": "branch/cap",
  "inputs": {
    "count": {
      "min": -2,
      "max": 6
    }
  },
  "step_limit": 80,
  "pre": [
    "count >= 0",
    "count <= 6",
    "count >= -100",
    "count <= 1002"
  ],
  "post": [
    "(count < 3 and updated == count + 1) or (count >= 3 and updated == count)"
  ],
  "program": [
    {
      "if": {
        "cond": "count < 3",
        "then": [
          {
            "assign": {
              "updated": "count + 1"
            }
          }
        ],
        "else": [
          {
            "assign": {
              "updated": "count"
            }
          }
        ]
      }
    }
  ],
  "id": "ex_051",
  "expected_redundant_pre": [
    "count >= -100",
    "count <= 1002"
  ]
}